      <div class="border-t border-gray-800 mt-8 pt-8 text-center">
        <p class="text-gray-400">
          &copy; 2024 Tecno Solutions S.A. Todos los derechos reservados.
        </p>
      </div>
    </div>
  </footer>

  <script>
    // Mobile menu toggle
    const menuButton = document.getElementById("menuButton");
    const mobileMenu = document.getElementById("mobileMenu");

    // Toggle del menú (solo se ejecuta si menuButton no es null)
    menuButton?.addEventListener("click", () => {
      mobileMenu?.classList.toggle("hidden");
    });

    // Cerrar menú al hacer clic en un enlace (solo se ejecuta si mobileMenu no es null)
    const mobileLinks = mobileMenu?.querySelectorAll("a");
    mobileLinks?.forEach((link) => {
      link.addEventListener("click", () => {
        mobileMenu?.classList.add("hidden");
      });
    });

    document.addEventListener("DOMContentLoaded", () => {
      // Obtenemos los elementos del carrusel tipando como HTMLElement
      const carouselItems: NodeListOf<HTMLElement> =
        document.querySelectorAll(".carousel-item");
      let currentIndex: number = 0;
      const totalItems: number = carouselItems.length;

      // Usamos 'as HTMLElement | null' para indicarle a TS el tipo de estos elementos
      const nextButton = document.querySelector(".next") as HTMLElement | null;
      const prevButton = document.querySelector(".prev") as HTMLElement | null;

      // Función para mostrar el slide activo
      function showSlide(index: number): void {
        carouselItems.forEach((item, i) => {
          if (i === index) {
            item.classList.remove("opacity-0");
            item.classList.add("opacity-100");
          } else {
            item.classList.remove("opacity-100");
            item.classList.add("opacity-0");
          }
        });
      }

      // Avanza al siguiente slide
      function nextSlide(): void {
        currentIndex = (currentIndex + 1) % totalItems;
        showSlide(currentIndex);
      }

      // Retrocede al slide anterior
      function prevSlide(): void {
        currentIndex = (currentIndex - 1 + totalItems) % totalItems;
        showSlide(currentIndex);
      }

      // Eventos para los botones (con encadenamiento opcional)
      nextButton?.addEventListener("click", nextSlide);
      prevButton?.addEventListener("click", prevSlide);

      // Cambio automático cada 5 segundos
      setInterval(nextSlide, 5000);

      // Muestra el primer slide al iniciar
      showSlide(currentIndex);
    });
  </script>
</Layout>
